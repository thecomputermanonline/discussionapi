{% extends 'base.html.twig' %}

{% block title %}Thread index{% endblock %}

{% block body %}
    <h1>Thread index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for thread in threads %}
            <tr>
                <td>{{ thread.id }}</td>
                <td>{{ thread.subject }}</td>
                <td>
                    <a href="{{ path('thread_show', {'id': thread.id}) }}">show</a>
                    <a href="{{ path('thread_edit', {'id': thread.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('thread_new') }}">Create new</a>
{% endblock %}
